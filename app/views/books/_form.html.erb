<%= form_with model: @book, local: true do |f| %>
  # Campos del formulario
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <%= f.label :name_author %>
    <%= f.text_field :name_author %>
  </div>

  <div>
    <%= f.label :last_name_author %>
    <%= f.text_field :last_name_author %>
  </div>

  <div>
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>

  <div>
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>

  <%= f.submit %>
<% end %>

<%= link_to "Volver a la lista", books_path %>

# Mensajes de error
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> impidieron guardar el libro:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
