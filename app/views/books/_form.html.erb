<div class="book-form">

<%= form_with model: @book, local: true do |f| %>
  <%# Campos del formulario %>
  <div class="form-row full-width">
    <%= f.label :book_title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-row">
    <div class="form-group">
    <%= f.label :name_author %>
    <%= f.text_field :name_author %>
   </div>

  <div class="form-group">
    <%= f.label :last_name_author %>
    <%= f.text_field :last_name_author %>
  </div>
  </div>

  <div class="form-row">
  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>

  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>
</div>

  <%= f.submit class: "submit-button" %>
<% end %>
</div>

<%= link_to "Volver a la lista", books_path %>

<%# Mensajes de error %>
<% if @book.errors.any? %>
  <div id="error_explanation" style="color: red;">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
