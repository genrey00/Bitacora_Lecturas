<% if @book.errors.any? %>
  <div>
    <h3>Errores:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <%= f.label :name_author %>
    <%= f.text_field :name_author %>
  </div>

  <div>
    <%= f.label :last_name_author %>
    <%= f.text_field :last_name_author %>
  </div>

  <div>
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>

  <div>
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>

  <%= f.submit %>
<% end %>
<%= link_to "Volver a la lista", books_path %>